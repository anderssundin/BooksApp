@model IEnumerable<BooksApp.Models.BookModel>

@{
    ViewData["Title"] = "Start";
}

<h1>Startsida</h1>
<p>Här listas alla böcker.</p>

<p>
    <a asp-action="Create">Lägg till en ny bok</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pages)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Available)
                </td>
                <td>
                    @if (item.Author != null)
                    {
                        @Html.DisplayFor(modelItem => item.Author.Name)
                    }
                    else
                    {
                        <p> unknown author</p>
                    }
                </td>
                <td>
                    @if (item.Available == true)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Editera</a>
                        <span>|</span>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>

                </td>
            </tr>
        }
    </tbody>
</table>
