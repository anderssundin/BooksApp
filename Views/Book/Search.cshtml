@model IEnumerable<BooksApp.Models.BookModel>
    
@{
    ViewData["Title"] = "Sök bok";
}

<h1>Sök efter boktitel</h1>

<form method="post">
<label for="searchParam">Sök titel</label>
<input type="input" name="searchParam" />

<input type="submit" value="Sök">

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Available)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Available)
            </td>
            <td>
                @if (item.Author != null){
                @Html.DisplayFor(modelItem => item.Author.Name)
            } else {<p> unknown author</p>}
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editera</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>